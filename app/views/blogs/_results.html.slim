- for post in @search_results_posts
  = link_to(post, class: 'blog-item') do
    - if post.preview_img.present?
      .blog-img
        = image_tag(post.preview_img, alt: post.title, loading: 'lazy')

    .blog-item_content
      h3.blog-item_title = post.title
      time.blog-item-date datetime = post.created_at.strftime('%Y-%m-%d')
        = l(post.created_at, format: :blog_date)
      p.text_block = post.preview
= paginate(@search_results_posts)
